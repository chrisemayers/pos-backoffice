rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Product images - authenticated users can read/write
    match /tenants/{tenantId}/products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Profile photos - users can read any, write their own
    match /profile-photos/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
